#!/bin/env bash

# this script is needed to make thunderbird match the theme with the desktop, as
# it'll only do it based on the GTK_THEME var

if [ "$(readlink ~/.config/gtk-2.0/gtkrc-2.0)" = "dark" ]; then
    export GTK_THEME=Catppuccin-Mocha-Standard-Pink-Dark
else
    export GTK_THEME=Catppuccin-Latte-Standard-Pink-Light
fi

exec /usr/bin/thunderbird $@
