#!/usr/bin/sh

# author Gabriel G. de Brito gabrielgbrito@icloud.com
# version 1.0.0
# since Jul 24, 2022

# wrapper around i3lock-color

i3lock $* \
    --image $HOME/pics/Wallpapers/share/archlinux/nagatoro-arch-linux-dracula-bigger.png --centered \
    --{time,date,layout,verif,wrong,greeter}-font='Delugia:style=Regular' \
    --{time,date,layout,greeter,verif,modif}-color=#F8F8F2FF \
    --{time,date,greeter}-size=30 \
    --date-str="%a %b %d" \
    --time-str="%T" \
    --wrong-color=#FF5555FF \
    --color=282A36FF \
    --clock \
    --force-clock \
    --bar-indicator \
    --bar-count=1 \
    --bar-total-width="300" \
    --bar-pos="1318:950" \
    --ind-pos="1468:935" \
    --date-pos="1468:1010" \
    --time-pos="1468:1050" \
    --bar-periodic-step=300 \
    --bar-color=00000000 \
    --keyhl-color=#50FA7BFF \
    --bshl-color=#BD93F9FF \
    --ringver-color=#50FA7BFF \
    --ringwrong-color=#FF5555FF \
