#!/usr/bin/env rc

PAGER=nobs
EDITOR=E
SHELL=rc
MANPATH=$HOME/opt/plan9/man:$HOME/opt/share/man:/usr/local/man:/usr/local/share/man:/usr/share/man

fn cd { builtin cd $1 && awd $sysname }

tabstop=8

vfont='/mnt/font/Roboto-Regular/16a/font'
mfont='/mnt/font/Hack-Regular/16a/font'

9 acme -a -f $vfont -F $mfont
