#!/usr/bin/env bash

ACTIONS="lock\nsuspend\nlogout\nrestart\nshutdown"
CHOICE="$(echo -e $ACTIONS | dmenu -p 'session')"

if [ "$CHOICE" = "logout" ]
then
    killall -u $USER

elif [ "$CHOICE" = "restart" ]
then
    systemctl reboot

elif [ "$CHOICE" = "shutdown" ]
then
    systemctl poweroff

elif [ "$CHOICE" = "suspend" ]
then
    slock systemctl suspend

elif [ "$CHOICE" = "lock" ]
then
    slock
fi
