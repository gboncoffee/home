#!/usr/bin/sh

# author Gabriel G. de Brito gabrielgbrito@icloud.com
# version 1.1.0
# since Mar 19, 2022

ACTIONS=("lock\nlogout\nrestart\nshutdown")
CHOICE="$(echo -e $ACTIONS | dmenu -p 'power ')"

if [ "$CHOICE" == "logout" ]
then
    killall -u $USER

elif [ "$CHOICE" == "restart" ]
then
    systemctl reboot

elif [ "$CHOICE" == "shutdown" ]
then
    systemctl poweroff

elif [ "$CHOICE" == "lock" ]
then
    dm-tool lock
fi
