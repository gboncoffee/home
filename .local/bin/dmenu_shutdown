#!/usr/bin/sh

# author Gabriel G. de Brito gabrielgbrito@icloud.com
# version 1.1.0
# since Mar 19, 2022

ACTIONS="lock\nswitch to greeter\nlogout\nrestart\nshutdown"
CHOICE="$(echo $ACTIONS | dmenu -p 'power ')"

if [ "$CHOICE" = "logout" ]
then
    kill $(pgrep luabatmon)
    i3-msg exit

elif [ "$CHOICE" = "restart" ]
then
    systemctl reboot

elif [ "$CHOICE" = "shutdown" ]
then
    systemctl poweroff

elif [ "$CHOICE" = "switch to greeter" ]
then
    dm-tool switch-to-greeter
elif [ "$CHOICE" = "lock" ]
then
    dm-tool lock
fi
