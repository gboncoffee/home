#!/usr/bin/env bash

PAGE="$(cat ~/.config/bookmarks | awk -F '|' '{print substr($1, 0)}' | dmenu -i -p 'web')"
if [ "$PAGE" != "" ] 
then 
	SITE=$(grep "^$PAGE|" ~/.config/bookmarks | awk -F '|' '{print substr($2, 0)}')
	if [ "$SITE" == "" ]
	then
		$BROWSER --new-window "$PAGE"
	else
		$BROWSER --new-window "$SITE"
	fi
fi
