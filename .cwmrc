borderwidth 5

color inactiveborder "#ffffff"
color activeborder "#000000"
color urgencyborder "#880000"
color font "#000000"
color selfont "#ffffff"
color menubg "#ffffff"
color menufg "#000000"

fontname "Roboto Condensed:size=22"

htile 65
gap 40 0 0 0
ignore xclock
ignore panel

command term st
command lock slock
command terminal st
command 9term 9term.rc
command acme acme.rc
command browser firefox
command music quodlibet
command fm Thunar
command mail thunderbird

autogroup 2 Firefox-esr
autogroup 2 Navigator
autogroup 1 st-256color
autogroup 1 acme
autogroup 1 9term

unbind-key all

bind-key 4-Return terminal
bind-key 4-a menu-exec
bind-key 4-s menu-window
bind-key 4-Tab window-cycle
bind-key 4S-Tab window-rcycle

bind-key 4-w window-close
bind-key 4-h window-hide
bind-key 4-f window-maximize
bind-key 4S-f window-fullscreen
bind-key 4S-u window-htile
bind-key 4S-i window-vtile
bind-key 4-u window-hmaximize
bind-key 4-i window-vmaximize

bind-key 4-Up window-move-up-big
bind-key 4-Down window-move-down-big
bind-key 4-Left window-move-left-big
bind-key 4-Right window-move-right-big
bind-key 4S-Up window-resize-up-big
bind-key 4S-Down window-resize-down-big
bind-key 4S-Left window-resize-left-big
bind-key 4S-Right window-resize-right-big

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-0 group-toggle-all
bind-key 4C-1 group-toggle-1
bind-key 4C-2 group-toggle-2
bind-key 4C-3 group-toggle-3
bind-key 4C-4 group-toggle-4
bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-0 window-group

bind-key 4C-l lock
bind-key 4C-q quit
bind-key 4C-r restart

bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize
bind-mouse 4-2 window-lower
bind-mouse 4S-2 window-close
bind-mouse 4S-1 window-hide
bind-mouse 4S-3 window-maximize
