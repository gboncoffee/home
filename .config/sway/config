set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term kitty

output * bg /home/gb/.config/wallpaper fill

input * {
    xkb_layout "us,br"
    xkb_options "grp:shifts_toggle,caps:swapescape"
}

input type:touchpad {
    tap enabled
    pointer_accel 0.7
}

input type:pointer {
    pointer_accel 0.7
}

font pango:CaskaydiaCove Nerd Font Mono 12

exec luabatmon
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

floating_modifier $mod

bindsym $mod+n exec "firefox"

# terminal
bindsym $mod+Return exec "$term"
bindsym $mod+m exec "$term -e ncmpcpp"
bindsym $mod+s exec "$term -e pulsemixer"
bindsym $mod+c exec "$term -e python"
bindsym $mod+t exec "$term -e htop"
bindsym $mod+f exec "$term -e lf"
bindsym $mod+e exec "thunderbird"

bindsym $mod+p exec "grimshot --notify save screen ~/desk/screenshot-$(date +%s).png"
bindsym $mod+Shift+p exec "grimshot --notify save area ~/desk/screenshot-$(date +%s).png"

# dmenu/wofi
bindsym $mod+a exec wofi --show run
bindsym $mod+q exec dmenu_shutdown
bindsym $mod+Ctrl+p exec passmenu
bindsym $mod+b exec dmenu_web
bindsym $mod+Ctrl+b exec dmenu_bluetooth

# audio
bindsym Mod1+Ctrl+k exec pulsemixer --change-volume +1 && $refresh_i3status
bindsym Mod1+Ctrl+j exec pulsemixer --change-volume -1 && $refresh_i3status
bindsym Mod1+Ctrl+m exec pulsemixer --toggle-mute && $refresh_i3status
bindsym Mod1+Ctrl+p exec mpc toggle && $refresh_i3status
bindsym Mod1+Ctrl+l exec mpc next && $refresh_i3status
bindsym Mod1+Ctrl+h exec mpc prev && $refresh_i3status

bindsym $mod+Ctrl+c exec dunstctl close

# kill window
bindsym $mod+w kill

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Ctrl+a focus parent
bindsym $mod+Ctrl+s focus child

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# change container layout
bindsym $mod+Tab layout toggle tabbed splitv splith
bindsym $mod+Shift+s split vertical
bindsym $mod+Shift+v split horizontal
bindsym $mod+Shift+a layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# move the currently focused window to the scratchpad
bindsym $mod+Shift+0 move scratchpad

# show scratchpad
bindsym $mod+0 scratchpad show

# workspaces names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# reload the configuration file
bindsym $mod+Ctrl+r reload
bindsym Mod1+Ctrl+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym $left       resize grow width 10 px or 1 ppt
        bindsym $down       resize shrink height 10 px or 1 ppt
        bindsym $up         resize grow height 10 px or 1 ppt
        bindsym $right      resize shrink width 10 px or 1 ppt
	    bindsym s           resize grow height 5px or 1ppt
	    bindsym v           resize grow width 5px or 1ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Shift+r mode "default"
}

bindsym $mod+Shift+r mode "resize"

bindgesture swipe:4:left workspace prev
bindgesture swipe:4:right workspace next

bindgesture swipe:3:left focus left
bindgesture swipe:3:down focus down
bindgesture swipe:3:up focus up
bindgesture swipe:3:right focus right

bindgesture pinch:3:counterclockwise move left
bindgesture pinch:3:clockwise move right
bindgesture pinch:4:counterclockwise move up
bindgesture pinch:4:clockwise move down

workspace_layout tabbed
default_orientation vertical
default_border normal 2
gaps inner 4
gaps outer 2

client.focused #F5C2E7 #F5C2E7 #1E1E2E
client.focused_inactive #89B4FA #89B4FA #1E1E2E
client.unfocused #1E1E2E #1E1E2E #CDD6F4
client.urgent #F38BA8 #F38BA8 #CDD6F4

bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
