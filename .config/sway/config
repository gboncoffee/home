set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term kitty

output * bg /home/gb/.config/wallpaper fill

input * {
    xkb_layout "us,br"
    xkb_options "grp:shifts_toggle,caps:swapescape"
}

input type:touchpad {
    tap enabled
    pointer_accel 0.7
}

input type:pointer {
    pointer_accel 0.7
}

font pango:CaskaydiaCove Nerd Font Mono 12

exec luabatmon
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

bindsym Mod4+n exec "firefox"

# terminal
bindsym Mod4+Return exec "$term"
bindsym Mod4+m exec "$term -e ncmpcpp"
bindsym Mod4+s exec "$term -e pulsemixer"
bindsym Mod4+c exec "$term -e python"
bindsym Mod4+t exec "$term -e htop"
bindsym Mod4+f exec "$term -e ranger"
bindsym Mod4+e exec "thunderbird"

bindsym Mod4+p exec "gnome-screenshot -i"

# dmenu/wofi
bindsym Mod4+a exec wofi --show run
bindsym Mod4+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym Mod4+Ctrl+p exec passmenu --type
bindsym Mod4+b exec dmenu_web
bindsym Mod4+Ctrl+b exec dmenu_bluetooth

# audio
bindsym Mod1+Ctrl+k exec pulsemixer --change-volume +1 && $refresh_i3status
bindsym Mod1+Ctrl+j exec pulsemixer --change-volume -1 && $refresh_i3status
bindsym Mod1+Ctrl+m exec pulsemixer --toggle-mute && $refresh_i3status
bindsym Mod1+Ctrl+p exec mpc toggle && $refresh_i3status
bindsym Mod1+Ctrl+l exec mpc next && $refresh_i3status
bindsym Mod1+Ctrl+h exec mpc prev && $refresh_i3status

bindsym Mod4+Ctrl+c exec dunstctl close

# kill window
bindsym Mod4+w kill

# change focus
bindsym Mod4+$left focus left
bindsym Mod4+$down focus down
bindsym Mod4+$up focus up
bindsym Mod4+$right focus right

# move focused window
bindsym Mod4+Shift+$left move left
bindsym Mod4+Shift+$down move down
bindsym Mod4+Shift+$up move up
bindsym Mod4+Shift+$right move right

# enter fullscreen mode for the focused container
bindsym Mod4+Shift+f fullscreen toggle

# change container layout
bindsym Mod4+Tab layout toggle tabbed splitv splith
bindsym Mod4+Shift+s split vertical
bindsym Mod4+Shift+v split horizontal
bindsym Mod4+Shift+a layout default

# toggle tiling / floating
bindsym Mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

# move the currently focused window to the scratchpad
bindsym Mod4+Shift+0 move scratchpad

# show scratchpad
bindsym Mod4+0 scratchpad show

# workspaces names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# switch to workspace
bindsym Mod4+1 workspace number $ws1
bindsym Mod4+2 workspace number $ws2
bindsym Mod4+3 workspace number $ws3
bindsym Mod4+4 workspace number $ws4
bindsym Mod4+5 workspace number $ws5
bindsym Mod4+6 workspace number $ws6
bindsym Mod4+7 workspace number $ws7
bindsym Mod4+8 workspace number $ws8
bindsym Mod4+9 workspace number $ws9

# move focused container to workspace
bindsym Mod4+Shift+1 move container to workspace number $ws1
bindsym Mod4+Shift+2 move container to workspace number $ws2
bindsym Mod4+Shift+3 move container to workspace number $ws3
bindsym Mod4+Shift+4 move container to workspace number $ws4
bindsym Mod4+Shift+5 move container to workspace number $ws5
bindsym Mod4+Shift+6 move container to workspace number $ws6
bindsym Mod4+Shift+7 move container to workspace number $ws7
bindsym Mod4+Shift+8 move container to workspace number $ws8
bindsym Mod4+Shift+9 move container to workspace number $ws9

# reload the configuration file
bindsym Mod4+Ctrl+r reload
bindsym Mod1+Ctrl+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym $left       resize grow width 10 px or 1 ppt
        bindsym $down       resize shrink height 10 px or 1 ppt
        bindsym $up         resize grow height 10 px or 1 ppt
        bindsym $right      resize shrink width 10 px or 1 ppt
	    bindsym s           resize grow height 5px or 1ppt
	    bindsym v           resize grow width 5px or 1ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod4+Shift+r mode "default"
}

bindsym Mod4+Shift+r mode "resize"

workspace_layout tabbed
default_orientation vertical
default_border normal 2
hide_edge_borders smart

client.focused #F5C2E7 #F5C2E7 #1E1E2E #F5C2E7 #F5C2E7
client.focused_inactive #94E2D5 #94E2D5 #1E1E2E #94E2D5 #94E2D5
client.unfocused #1E1E2E #1E1E2E #CDD6F4 #1E1E2E #1E1E2E
client.urgent #F38BA8 #F38BA8 #CDD6F4 #F38BA8 #F38BA8
client.placeholder #1E1E2E #1E1E2E #CDD6F4 #1E1E2E #198388

bar {
    status_command i3status
    separator_symbol " | "
    position bottom
    colors {
        background #1E1E2E
        statusline #CDD6F4
        separator #6272a4
        focused_workspace #F5C2E7 #F5C2E7 #1E1E2E
        active_workspace #1E1E2E #1E1E2E #CDD6F4
        inactive_workspace #1E1E2E #1E1E2E #CDD6F4
        binding_mode #94E2D5 #94E2D5 #1E1E2E
    }
}

include /etc/sway/config.d/*
