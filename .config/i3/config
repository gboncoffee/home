#
# Gb's i3 WM <3 UwU
#

font pango:CaskaydiaCove Nerd Font Mono 12
exec --no-startup-id picom
exec --no-startup-id luabatmon
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id unclutter --timeout --jitter --start-hidden
exec --no-startup-id dunst
exec --no-startup-id feh --no-fehbg --bg-fill ~/.config/wallpaper

set $refresh_i3status killall -SIGUSR1 i3status

set $up k
set $down j
set $left h
set $right l

set $terminal alacritty

floating_modifier Mod1
tiling_drag modifier titlebar

bindsym Mod4+e exec emacsclient -c -a emacs
bindsym Mod4+f exec "emacsclient -c -e '(deer)'"
bindsym Mod4+n exec "$BROWSER"

# terminal
bindsym Mod4+Return exec "$TERMINAL"
bindsym Mod4+m exec "$TERMINAL -e ncmpcpp"
bindsym Mod4+s exec "$TERMINAL -e pulsemixer"
bindsym Mod4+c exec "$TERMINAL -e julia"
bindsym Mod4+t exec "$TERMINAL -e htop"

bindsym Mod4+p exec "screenshotter"
bindsym Mod4+Shift+p exec "screenshotter select"

# dmenu/rofi
bindsym Mod4+a exec --no-startup-id rofi -show run
bindsym Mod4+q exec --no-startup-id dmenu_shutdown
bindsym Mod4+Ctrl+p exec --no-startup-id passmenu --type
bindsym Mod4+b exec --no-startup-id dmenu_web
bindsym Mod4+Ctrl+b exec --no-startup-id dmenu_bluetooth
bindsym Mod1+Ctrl+d exec --no-startup-id monitors

# audio
bindsym Mod1+Ctrl+k exec --no-startup-id pulsemixer --change-volume +1 && $refresh_i3status
bindsym Mod1+Ctrl+j exec --no-startup-id pulsemixer --change-volume -1 && $refresh_i3status
bindsym Mod1+Ctrl+m exec --no-startup-id pulsemixer --toggle-mute && $refresh_i3status
bindsym Mod1+Ctrl+p exec --no-startup-id mpc toggle && $refresh_i3status
bindsym Mod1+Ctrl+l exec --no-startup-id mpc next && $refresh_i3status
bindsym Mod1+Ctrl+h exec --no-startup-id mpc prev && $refresh_i3status

bindsym Mod4+Ctrl+c exec --no-startup-id dunstctl close

# kill window
bindsym Mod4+w kill

# change focus
bindsym Mod4+$left focus left
bindsym Mod4+$down focus down
bindsym Mod4+$up focus up
bindsym Mod4+$right focus right

# move focused window
bindsym Mod4+Shift+$left move left
bindsym Mod4+Shift+$down move down
bindsym Mod4+Shift+$up move up
bindsym Mod4+Shift+$right move right

# enter fullscreen mode for the focused container
bindsym Mod4+Shift+f fullscreen toggle

# change container layout
bindsym Mod4+Tab layout toggle tabbed splitv splith

# toggle tiling / floating
bindsym Mod4+Shift+t floating toggle

# change focus between tiling / floating windows
bindsym Mod4+space focus mode_toggle

# focus the parent container
bindsym Mod4+Shift+a focus parent

# focus the child container
bindsym Mod4+Shift+d focus child

# move the currently focused window to the scratchpad
bindsym Mod4+Shift+0 move scratchpad

# show scratchpad
bindsym Mod4+0 scratchpad show

# workspaces names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# switch to workspace
bindsym Mod4+1 workspace number $ws1
bindsym Mod4+2 workspace number $ws2
bindsym Mod4+3 workspace number $ws3
bindsym Mod4+4 workspace number $ws4
bindsym Mod4+5 workspace number $ws5
bindsym Mod4+6 workspace number $ws6
bindsym Mod4+7 workspace number $ws7
bindsym Mod4+8 workspace number $ws8
bindsym Mod4+9 workspace number $ws9

# move focused container to workspace
bindsym Mod4+Shift+1 move container to workspace number $ws1
bindsym Mod4+Shift+2 move container to workspace number $ws2
bindsym Mod4+Shift+3 move container to workspace number $ws3
bindsym Mod4+Shift+4 move container to workspace number $ws4
bindsym Mod4+Shift+5 move container to workspace number $ws5
bindsym Mod4+Shift+6 move container to workspace number $ws6
bindsym Mod4+Shift+7 move container to workspace number $ws7
bindsym Mod4+Shift+8 move container to workspace number $ws8
bindsym Mod4+Shift+9 move container to workspace number $ws9

# reload the configuration file
bindsym Mod4+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod4+Ctrl+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Mod4+Shift+r mode "default"
}

bindsym Mod4+Shift+r mode "resize"

workspace_layout tabbed

client.focused #ff79c6 #ff79c6 #282a36 #ff79c6 #ff79c6
client.focused_inactive #8be9fd #8be9fd #282a36 #8be9fd #8be9fd
client.unfocused #282a36 #282a36 #f8f8f2 #282a36 #282a36
client.urgent #ff5555 #ff5555 #f8f8f2 #ff5555 #ff5555
client.placeholder #282a36 #282a36 #f8f8f2 #282a36 #21222c

bar {
    status_command i3status
    separator_symbol " | "
    colors {
        background #282a36
	statusline #f8f8f2
	separator #6272a4
	focused_workspace #ff79c6 #ff79c6 #282a36
	active_workspace #282a36 #282a36 #f8f8f2
	inactive_workspace #282a36 #282a36 #f8f8f2
	binding_mode #8be9fd #8be9fd #282a36
    }
}
