#!/bin/sh

if [ "$XDG_SESSION_DESKTOP" = "cwm" ]; then
    trayer --edge top --align right --widthtype request --tint 0xffffeb --transparent true --alpha 0 --height 50 &
    nm-applet &
    pnmixer &
    xfce4-power-manager &
    xsettingsd &
    quodlibet --start-hidden &
    xsetroot -gray
    xclock -digital -strftime "%a %b %d, %H:%M" -geometry +0+0 &
    [ -f ~/.xprofile ] && . ~/.xprofile
fi
